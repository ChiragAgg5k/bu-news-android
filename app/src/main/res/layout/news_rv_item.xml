<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/backgroundColorDark"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@color/backgroundColorDark" />

        <TextView
            android:id="@+id/news_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_image"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:maxLines="2"
            android:padding="3dp"
            android:text="News Heading"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_heading"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="3dp"
            android:text="News Description"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/news_uploader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_description"
            android:layout_margin="3dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:text="News Uploader"
            android:textAlignment="textEnd"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>